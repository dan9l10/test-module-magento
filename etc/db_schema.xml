<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="danylo_blog_posts">

        <column xsi:type="int" name="id_post" padding="10" unsigned="true" nullable="false" comment="Entity Id"/>

        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Severity code"/>

        <column xsi:type="text" name="content" nullable="false" comment="content"/>

        <column xsi:type="varchar" name="url" nullable="false" length="255" comment="url"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">

            <column name="id_post"/>

        </constraint>

    </table>
</schema>
